<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Main">
        <ListPreference
            android:key="county"
            android:summary="Pick a county for localized news cards"
            android:title="County"
            android:entryValues="@array/counties"
            android:entries="@array/counties"/>
        <CheckBoxPreference
            android:key="request_loc"
            android:summaryOff="Turn on to enable location based updates"
            android:summaryOn="Turn off to disable location based updates"
            android:title="Location" />
        <Preference
            android:key="account"
            android:summary="Update your account settings"
            android:title="Account " />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="General">
        <SwitchPreference
            android:key="shuffle"
            android:summaryOn="Turn off to disable page shuffling on main page"
            android:summaryOff="Turn on to shuffle pages on main page"
            android:title="Shuffle Pages" />
    </PreferenceCategory>
</PreferenceScreen>
